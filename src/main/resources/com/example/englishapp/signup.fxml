<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to right bottom, #61d8de, #e839f6);" stylesheets="@signup.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.englishapp.util.Signup">
    <children>
        <VBox alignment="CENTER" layoutX="200.0" layoutY="80.0" prefHeight="450.0" prefWidth="400.0">
            <children>
                <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="166.0" text="SIGN UP" textAlignment="JUSTIFY" textFill="#272154">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <font>
                        <Font name="Franklin Gothic Medium Cond" size="50.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="43.0" prefWidth="360.0">
               <children>
                  <Label fx:id="wrongUsername" alignment="CENTER" prefHeight="43.0" prefWidth="360.0" />
               </children></HBox>
                <HBox alignment="CENTER" prefHeight="111.0" prefWidth="360.0">
                    <children>
                        <TextField fx:id="usernameField" prefHeight="39.0" prefWidth="231.0" promptText="Username">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin>
                            <effect>
                                <DropShadow />
                            </effect>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="82.0" prefWidth="360.0">
                    <children>
                        <TextField fx:id="passwordField" prefHeight="39.0" prefWidth="231.0" promptText="Password">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <effect>
                                <DropShadow />
                            </effect>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="46.0" prefWidth="360.0">
                    <children>
                        <Label fx:id="wrongConfirm" alignment="CENTER" prefHeight="45.0" prefWidth="360.0" textFill="#e40f0f" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="42.0" prefWidth="442.0">
                    <children>
                        <TextField fx:id="confirmPasswordField" prefHeight="39.0" prefWidth="231.0" promptText="Confirm password">
                            <effect>
                                <DropShadow />
                            </effect>
                        </TextField>
                    </children>
                </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="292.0">
               <children>
                      <Button mnemonicParsing="false" onAction="#signup" prefHeight="45.0" prefWidth="126.0" text="Sign up" textFill="#ac1111" />
                  <Button mnemonicParsing="false" onAction="#back" prefHeight="45.0" prefWidth="127.0" style="-fx-background-color: #f5f5f5; -fx-text-fill: #5f28c0;" text="Login" />
               </children>
            </HBox>
            </children>
         <effect>
            <DropShadow />
         </effect>
        </VBox>
    </children>
</AnchorPane>
