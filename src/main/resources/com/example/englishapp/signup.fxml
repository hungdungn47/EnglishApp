<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to right bottom, #61d8de, #e839f6);" stylesheets="@signup.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.englishapp.Signup">
   <children>
      <VBox alignment="CENTER" layoutX="170.0" layoutY="93.0" prefHeight="414.0" prefWidth="459.0">
         <children>
            <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="166.0" text="SIGN UP" textAlignment="JUSTIFY" textFill="#430c59">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font name="Tahoma" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="86.0" prefWidth="442.0">
               <children>
                  <Label text="Username">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefHeight="39.0" prefWidth="210.0">
                     <HBox.margin>
                        <Insets left="80.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow />
                     </effect>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="442.0">
               <children>
                  <Label text="Password">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="passwordField" prefHeight="39.0" prefWidth="210.0">
                     <HBox.margin>
                        <Insets left="80.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow />
                     </effect>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="442.0">
               <children>
                  <Label fx:id="wrongConfirm" alignment="CENTER" prefHeight="11.0" prefWidth="358.0" textFill="#e40f0f" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="442.0">
               <children>
                  <Label text="Confirm password">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="confirmPasswordField" prefHeight="39.0" prefWidth="210.0">
                     <effect>
                        <DropShadow />
                     </effect>
                  </TextField>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#signup" prefHeight="42.0" prefWidth="126.0" text="Sign up" textFill="#ac1111">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>