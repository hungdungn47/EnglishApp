<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to right bottom, #61d8de, #e839f6);" stylesheets="@signup.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.englishapp.Signup">
    <children>
        <VBox alignment="CENTER" layoutX="195.0" layoutY="93.0" prefHeight="414.0" prefWidth="410.0">
            <children>
                <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="166.0" text="SIGN UP" textAlignment="JUSTIFY" textFill="#430c59">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <font>
                        <Font name="Tahoma" size="30.0" />
                    </font>
                </Label>
                <HBox prefHeight="25.0" prefWidth="370.0">
               <children>
                  <Label fx:id="wrongUsername" alignment="TOP_LEFT" prefHeight="31.0" prefWidth="227.0" textFill="#e40f0f">
                     <HBox.margin>
                        <Insets left="70.0" />
                     </HBox.margin>
                  </Label>
               </children></HBox>
                <HBox alignment="CENTER" prefHeight="72.0" prefWidth="370.0">
                    <children>
                        <TextField fx:id="usernameField" prefHeight="39.0" prefWidth="231.0" promptText="Username">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin>
                            <effect>
                                <DropShadow />
                            </effect>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="56.0" prefWidth="442.0">
                    <children>
                        <TextField fx:id="passwordField" prefHeight="39.0" prefWidth="231.0" promptText="Password">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <effect>
                                <DropShadow />
                            </effect>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="0.0" prefWidth="442.0">
                    <children>
                        <Label fx:id="wrongConfirm" alignment="TOP_LEFT" prefHeight="18.0" prefWidth="227.0" textFill="#e40f0f" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="42.0" prefWidth="442.0">
                    <children>
                        <TextField fx:id="confirmPasswordField" prefHeight="39.0" prefWidth="231.0" promptText="Confirm password">
                            <effect>
                                <DropShadow />
                            </effect>
                        </TextField>
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#signup" prefHeight="42.0" prefWidth="126.0" text="Sign up" textFill="#ac1111">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
