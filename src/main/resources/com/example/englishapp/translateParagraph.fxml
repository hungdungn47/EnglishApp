<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.englishapp.TranslateParagraph">
   <children>
      <TextArea fx:id="toBeTranslatedTextArea" layoutX="66.0" layoutY="107.0" prefHeight="461.0" prefWidth="256.0" />
      <HBox layoutX="261.0" layoutY="49.0" prefHeight="39.0" prefWidth="169.0" spacing="10.0">
         <children>
            <ImageView fx:id="translateFromIcon" fitHeight="41.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/england.png" />
               </image>
            </ImageView>
            <Button fx:id="change_language_button" mnemonicParsing="false" onAction="#changeLanguage">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ImageView fx:id="translateToIcon" fitHeight="40.0" fitWidth="57.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/vietnam.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <TextArea fx:id="resultTextArea" layoutX="384.0" layoutY="107.0" prefHeight="461.0" prefWidth="256.0" />
   </children>
</AnchorPane>
